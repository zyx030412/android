<?xml version="1.0" encoding="utf-8"?>
<!--约束布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/back"
            />
        <!--android:background="@null"去除下划线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="重新设置密码"
            android:layout_marginLeft="90dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <!--    下划线-->
    </LinearLayout>

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/forget_pwdforget_linearLayout"
        >
        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/forget_phone_Text"
                android:layout_width="80dp"
                android:text="手机号"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                />
            <!--android:background="@null"去除下划线-->
            <EditText
                android:id="@+id/forget_phone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/forget_phone_Text"
                android:background="@null"
                android:paddingStart="10dp"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:hint="请输入手机号"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <!--    下划线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="98.5dp"
                android:layout_marginRight="18.5dp"
                android:background="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/register_code_Text"
                android:layout_width="80dp"
                android:text="验证码"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                />
            <!--android:background="@null"去除下划线-->
            <EditText
                android:id="@+id/forget_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLength="6"
                android:maxLines="1"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/register_code_Text"
                android:background="@null"
                android:paddingStart="10dp"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:hint="请输入验证码"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/forget_getCode"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="获取验证码"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-140dp"
                android:layout_toEndOf="@id/forget_code"
                android:textColor="@color/a_blue"
                android:background="@drawable/retangle2"
                android:textSize="16sp"/>
            <!--    下划线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="98.5dp"
                android:layout_marginRight="18.5dp"
                android:background="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/forget_mima1_Text"
                android:layout_width="80dp"
                android:text="新密码"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                />
            <!--android:background="@null"去除下划线-->

            <EditText
                android:maxLength="15"
                android:maxLines="1"
                android:id="@+id/forget_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/forget_mima1_Text"
                android:background="@null"
                android:paddingStart="10dp"
                android:digits="@string/pwd_format"
                android:inputType="textPassword"
                android:textColorHint="@color/grey"
                android:hint="8-15位字母，数字或常用符号"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/forget_mima1_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-60dp"
                android:layout_toEndOf="@id/forget_password1"
                android:src="@mipmap/mimayincang"
                />
            <!--    下划线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="98.5dp"
                android:layout_marginRight="18.5dp"
                android:background="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/forget_mima2_text"
                android:layout_width="80dp"
                android:text="确认密码"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                />
            <!--android:background="@null"去除下划线-->
            <EditText
                android:maxLength="15"
                android:maxLines="1"
                android:id="@+id/forget_password2"
                android:digits="@string/pwd_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@id/forget_mima2_text"
                android:background="@null"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:textColorHint="@color/grey"
                android:hint="请再次输入密码"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/forget_mima2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-60dp"
                android:layout_toEndOf="@id/forget_password2"
                android:src="@mipmap/mimayincang"
                />

            <!--    下划线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="98.5dp"
                android:layout_marginRight="18.5dp"
                android:background="@color/black" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:text="密码由8-15位字母/数字/常用符号(,.!@#$%^*)任意两种或以上组成"
        android:textColor="@color/grey"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/forget_affirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/retangle3"
        android:text="保存"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/login_forget"
        tools:layout_editor_absoluteX="30dp" />
</LinearLayout>