<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_grey">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_grey"
            android:text="取消"
            android:textColor="@color/a_blue"
            android:textSize="25dp"
            android:id="@+id/register_cancel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:text="注册账号"
            android:gravity="center"
            android:textSize="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/retangle_register"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86 >"
                android:textColor="@color/grey"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="输入手机号码"
                android:textColorHint="@color/text_grey"
                android:textSize="25dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/retangle_register"
            android:layout_margin="30dp">

            <EditText
                android:id="@+id/register_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/text_grey"
                android:textSize="25dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/register_getCode"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@color/little_grey"
                android:text="获取验证码"
                android:textColor="@color/a_blue"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/radio_register"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:id="@+id/register_radio"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="已阅读并同意账号"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="20dp"
                android:textColor="@color/a_blue"
                android:layout_gravity="center"
                android:text="用户协议"
                android:id="@+id/register_user"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:background="@drawable/retangle_register_button"
            android:text="注册"
            android:textSize="25dp"
            android:id="@+id/register_register"
            />

    </LinearLayout>


</LinearLayout>