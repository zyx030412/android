<?xml version="1.0" encoding="utf-8"?>
<!--约束布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/personal_information_back"
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@mipmap/back"
            />
        <!--android:background="@null"去除下划线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:layout_marginStart="110dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <!--    下划线-->
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--        左右侧分别对其布局-->
        <LinearLayout
            android:id="@+id/personal_information_head_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="头像"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personal_information_head"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/yonghu_male" />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/black"
                android:scaleType="centerInside"
                android:src="@mipmap/enter"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <!--        左右侧分别对其布局结束-->
        <!--        左右侧分别对其布局-->
        <LinearLayout
            android:id="@+id/personal_information_name_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="昵称"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginEnd="60dp"
                android:id="@+id/personal_information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="18"
                android:maxLines="1"
                android:background="@null"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:hint="请输入昵称"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <!--        左右侧分别对其布局结束-->
        <!--        左右侧分别对其布局-->
        <LinearLayout
            android:id="@+id/personal_information_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="手机号码"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/personal_information_phone"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="132****8929"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/black"
                android:scaleType="centerInside"
                android:src="@mipmap/enter"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <!--        左右侧分别对其布局结束-->
        <!--        左右侧分别对其布局-->
        <LinearLayout
            android:id="@+id/personal_information_sex_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="性别"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/personal_information_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/personal_information_radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginRight="40dp"
                    android:buttonTint="@color/img_blue"
                    android:checked="true"
                    android:paddingStart="10dp"
                    android:text="男" />
                <!--                android:onClick="onRadioButtonClicked"-->
                <RadioButton
                    android:id="@+id/personal_information_radio_female"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/img_blue"
                    android:text="女" />
            </RadioGroup>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <!--        左右侧分别对其布局结束-->
<!--        左右侧分别对其布局-->
<!--                      android:layout_width="0dp"
                android:layout_weight="1"-->
        <LinearLayout
            android:id="@+id/personal_information_birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="生日"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/personal_information_birthday"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1990-06-06"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/personal_information_birthday_image"
                android:layout_width="40dp"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/black"
                android:scaleType="centerInside"
                android:src="@mipmap/enter"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
<!--        左右侧分别对其布局结束-->
    </LinearLayout>

    <TextView
        android:id="@+id/personal_information_affirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/retangle"
        android:text="保存"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/login_forget"
        tools:layout_editor_absoluteX="30dp" />
